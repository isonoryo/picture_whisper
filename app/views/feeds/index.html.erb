<div class="container">
<h1>投稿画像一覧</h1>

<table>
  <thead>
    <tr>
      <th><span class="label label-default">投稿画像</span></th>
      <th><span class="label label-default">投稿者</span></th>
      <th><span class="label label-default">コメント</span></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr class="content">
        <td><%= image_tag feed.image.to_s %></td>
        <td><%= feed.user.name %></td>
        <td><%= feed.content %></td>
        <td><button type="button" class="btn btn-primary"><%= link_to '投稿画像を見る', feed %></button></td>
        <td><button type="button" class="btn btn-success"><%= link_to '投稿を編集する', edit_feed_path(feed) %></button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to '投稿画像を削除する', feed, method: :delete, data: { confirm: '削除してもよろしいですか?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-info"><%= link_to '新規投稿', new_feed_path %></button>
</div>
